{% extends 'base.html.twig' %}

{% block title %}Tasks index{% endblock %}

{% block body %}
    <h1>Tasks</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Due_date</th>
                <th>Start_date</th>
                <th>Add Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        {% for task in tasks %}
        <tbody>
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.dueDate ? task.dueDate|date('d-m-Y') : '' }}</td>
                <td>{{ task.startDate ? task.startDate|date('d-m-Y') : '' }}</td>
                <td><a href="{{ path('app_comments_new') }}">Add Comment</a></td>
                <td>
                    <a href="{{ path('app_tasks_show', {'id': task.id}) }}">show</a>
                    <a href="{{ path('app_tasks_edit', {'id': task.id}) }}">edit</a>
                    <a  href="{{ path('app_tasks_delete', {'id': task.id}) }}">delete</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tasks_new') }}">Create new</a>
{% endblock %}
